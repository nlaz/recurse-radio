{
  "name": "mini-radio",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.js --minify --outdir build --target bun",
    "start": "bun src/index.js",
    "verbose": "LOG_LEVEL=verbose bun device",
    "device": "NODE_ENV=production bun src/index.js",
    "dev": "bun --watch --no-warnings src/index.js"
  },
  "engines": {
    "node": ">=21.0.0"
  },
  "dependencies": {
    "body-parser": "^1.20.3",
    "mp3-parser": "nlaz/mp3-parser",
    "ollama": "^0.5.11",
    "polka": "^0.5.2",
    "polka-ejs": "^1.0.1",
    "serve-static": "^1.16.2",
    "throttler": "nlaz/throttler"
  }
}
